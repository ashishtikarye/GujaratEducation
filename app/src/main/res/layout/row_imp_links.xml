<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnview_aero">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_implinks_img"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:scaleType="fitCenter" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_implinks_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@id/iv_implinks_img"
                android:fontFamily="@font/pop_semibold"
                android:text="sdfs"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_implinks_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_implinks_name"
                android:layout_toRightOf="@id/iv_implinks_img"
                android:fontFamily="@font/pop_semibold"
                android:text="dsf"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp"
                app:fontFamily="@font/pop_regular" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_implinks_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_implinks_by"
                android:layout_toRightOf="@id/iv_implinks_img"
                android:fontFamily="@font/pop_medium"
                android:text="sdf"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/pop_regular" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnview_aero"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ic_right_direction" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>