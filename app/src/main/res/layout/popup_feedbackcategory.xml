<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="@dimen/_550sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            card_view:cardBackgroundColor="#e4e4e4"
            card_view:cardCornerRadius="@dimen/_5sdp"
            card_view:cardElevation="@dimen/_5sdp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/lvtopbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_text"></View>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dialogtitle"
                    android:fontFamily="@font/pop_bold"
                    
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:text="@string/fdcategory"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_text"></View>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvgoodthings"
                    android:fontFamily="@font/pop_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:textColor="@color/grey_text2"
                    android:textSize="@dimen/_12sdp"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_text"></View>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvsuggestion"
                    android:fontFamily="@font/pop_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:textColor="@color/grey_text2"
                    android:textSize="@dimen/_12sdp"
                     />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_text"></View>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvloginproblem"
                    android:fontFamily="@font/pop_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:textColor="@color/grey_text2"
                    android:textSize="@dimen/_12sdp"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_text"></View>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvnewtabinfo"
                    android:fontFamily="@font/pop_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:textColor="@color/grey_text2"
                    android:textSize="@dimen/_12sdp"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_text"></View>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvhelpmsb"
                    android:fontFamily="@font/pop_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:textColor="@color/grey_text2"
                    android:textSize="@dimen/_12sdp"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_text"></View>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvcomplaint"
                    android:fontFamily="@font/pop_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:textColor="@color/grey_text2"
                    android:textSize="@dimen/_12sdp"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_text"></View>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvothers"
                    android:fontFamily="@font/pop_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:textColor="@color/grey_text2"
                    android:textSize="@dimen/_12sdp"
                     />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>

