<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkYellow"
    app:cardCornerRadius="@dimen/_5sdp"
    android:id="@+id/card_chapter"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_3sdp">


    <RelativeLayout
        android:id="@+id/rl_chapter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_chapterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/pop_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:text="1."
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:singleLine="true"
            android:ellipsize="end" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_subject_aerow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:clickable="false"
            android:src="@drawable/ic_right_direction" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="@font/pop_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:text="sbdsb"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_chapterno"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:singleLine="true"
                android:ellipsize="end" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>